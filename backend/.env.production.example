# Production Environment Configuration
# Copy this file to .env.production and fill in the values
# IMPORTANT: Never commit .env.production with real secrets to git

# Rails environment
RAILS_ENV=production

# Secret key base (generate with: rails secret)
SECRET_KEY_BASE=your_secret_key_here

# Rails master key (found in config/master.key or generate with: rails credentials:edit)
RAILS_MASTER_KEY=your_master_key_here

# Allowed CORS origins (comma-separated for multiple domains)
# For this app, frontend and API are on the same domain
# Example: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com

# Database URL (SQLite for cPanel shared hosting)
DATABASE_URL=sqlite3:storage/production.sqlite3

# Server port (default: 3000, cPanel usually manages this)
PORT=3000

# Optional: Web concurrency and max threads for Puma
# WEB_CONCURRENCY=2
# RAILS_MAX_THREADS=5

# Optional: Enable Solid Queue in Puma (for background jobs)
# SOLID_QUEUE_IN_PUMA=true

# Optional: Rails log level (debug, info, warn, error, fatal)
# RAILS_LOG_LEVEL=info
